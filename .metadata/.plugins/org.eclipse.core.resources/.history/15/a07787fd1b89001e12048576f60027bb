package com.infy;

import java.util.ArrayList;
import java.util.List;

import org.apache.commons.logging.Log;
import org.apache.commons.logging.LogFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.ComponentScan;
import org.springframework.context.annotation.PropertySource;
import org.springframework.core.env.Environment;
import com.infy.dto.ProjectDTO;
import com.infy.dto.TeamMemberDTO;
import com.infy.service.ProjectService;
import org.apache.commons.logging.Log;

@SpringBootApplication
@ComponentScan(" com.infy ")
//@PropertySource("classPath:./application.properties")
public class AbcToTraineeApplication implements CommandLineRunner{
	
	
	@Autowired
	public ProjectService projectservice;
	@Autowired
	public Environment env;
	public static void main(String[] args) {
		SpringApplication.run(AbcToTraineeApplication.class, args);
		
	}
	Log LOGGER = LogFactory.getLog(AbcToTraineeApplication.class); 
	@Override
	public void run(String... args) throws Exception {

		addProject();
		getProjectDetails();
	}
	
	public void addProject() {
		ProjectDTO project=new ProjectDTO(); 
		try {
            projectservice.addProject(project);
            project.setProjectName("FSADM8");
    		project.setCost(200000);
    		project.setTeamSize(5);
    		project.setTechnologyUsed("Java");
    		List<TeamMemberDTO> teamMember=new ArrayList<>();
    		TeamMemberDTO member=new TeamMemberDTO();
    		member.setEmployeeId(722009);
    		member.setDesignation("SSC");
    		member.setEmployeeName("Robin");
    		member.setSkills("Java , Oracle");
    		TeamMemberDTO member1=new TeamMemberDTO();
    		member.setEmployeeId(722019);
    		member.setDesignation("SSC");
    		member.setEmployeeName("Monica");
    		member.setSkills("Java , Python");
    		teamMember.add(member);
    		teamMember.add(member1);
    		project.setMemberList(teamMember);
            LOGGER.info(env.getProperty("UserInterface.PROJECT_ADDED_SUCCESS"));
        } catch (Exception e) {
        	LOGGER.error(env.getProperty("General.EXCEPTION"));
        }
		
		}
		
	public void getProjectDetails() {

	}

}