package com.sampleapplication.datatrack.LoginService;
import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.sampleapplication.datatrack.dto.UserDataDto;
import com.sampleapplication.datatrack.login.UserData;
import com.sampleapplication.datatrack.loginrepository.LoginRepository;

@Service
public class LoginService {

	@Autowired
	private final LoginRepository repo;

	public LoginService(LoginRepository repo) {
		super();
		this.repo = repo;
	}
	
	public boolean authenticate(int user_id,String password) {
		Optional<UserData> userdataList=repo.findById(user_id);
		return userdataList.isPresent() && userdataList.get().getPassword().equals(password);
	}
}
